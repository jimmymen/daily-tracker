        window.openAddExpenseModal = () => {
            document.getElementById('expenseDate').value = new Date().toISOString().substring(0, 10);
            document.getElementById('expenseAmount').value = '';
            document.getElementById('expensePayer').value = 'æˆ‘';
            document.getElementById('expenseDescription').value = '';
            document.getElementById('addExpenseModal').style.display = 'flex';
        };
        window.closeAddExpenseModal = () => {
            document.getElementById('addExpenseModal').style.display = 'none';
        };
        
        // ä¸‰è¿å‡»å…¥å£é€»è¾‘
        let clickCount = 0;
        let lastClickTime = 0;

        function handleTripleClick(event) {
            const now = Date.now();
            if (now - lastClickTime < 500) { // 500ms å†…è§†ä¸ºè¿å‡»
                clickCount++;
            } else {
                clickCount = 1;
            }
            lastClickTime = now;

            if (clickCount === 3) {
                if (currentUser) {
                    window.openExpenseView();
                    clickCount = 0; // é‡ç½®è®¡æ•°å™¨
                } else {
                    alert("è¯·å…ˆç™»å½•æ‰èƒ½ä½¿ç”¨è®°è´¦åŠŸèƒ½ï¼");
                }
            }
        }
        
        // åœ¨ DOM åŠ è½½åï¼Œç»‘å®šäº‹ä»¶
        document.addEventListener('DOMContentLoaded', () => {
             const headerEl = document.getElementById('appHeader');
             // ç”±äº appHeader æ˜¯åœ¨ app å†…éƒ¨ï¼Œapp åˆå§‹æ˜¯ hidden çš„ï¼Œæ‰€ä»¥æˆ‘ä»¬ç›‘å¬å®ƒçš„ç‚¹å‡»äº‹ä»¶
             // å¦‚æœç”¨æˆ·æ²¡ç™»å½• appHeader æ˜¯ä¸å­˜åœ¨çš„ï¼Œæ‰€ä»¥æˆ‘ä»¬åœ¨ onAuthStateChanged é‡Œç»‘å®šæ›´å¯é 
        });

        // è®°è´¦æ•°æ®å†™å…¥
        window.saveExpenseManual = async () => {
            if (!currentUser) return;
            const date = document.getElementById('expenseDate').value;
            const amount = Number(document.getElementById('expenseAmount').value.trim());
            const payer = document.getElementById('expensePayer').value;
            const description = document.getElementById('expenseDescription').value.trim();
            
            if (date && amount > 0 && payer) {
                await addDoc(collection(db, `users/${currentUser.uid}/expenses`), { 
                    date, 
                    amount, 
                    payer, 
                    description,
                    timestamp: serverTimestamp() 
                });
                closeAddExpenseModal();
            } else {
                alert("è¯·å¡«å†™æ­£ç¡®çš„æ—¥æœŸå’Œé‡‘é¢ï¼");
            }
        };

        // è®°è´¦æ•°æ®åˆ é™¤
        window.deleteExpense = async (id) => {
            if (confirm("åˆ é™¤æ­¤è´¦ç›®ï¼Ÿ")) { 
                await deleteDoc(doc(db, `users/${currentUser.uid}/expenses`, id)); 
            }
        };

        // è®°è´¦æ•°æ®åŠ è½½ä¸ç›‘å¬
        async function loadExpenseData() {
            if (!currentUser) return;

            if (unsubE) unsubE(); 

            // ç›‘å¬æ‰€æœ‰è´¦ç›®æ•°æ®ï¼ŒæŒ‰æ—¥æœŸå’Œæ—¶é—´é™åºæ’åˆ—
            unsubE = onSnapshot(query(collection(db, `users/${currentUser.uid}/expenses`), orderBy("date", "desc"), orderBy("timestamp", "desc")), (snapshot) => {
                currentExpenses = snapshot.docs.map(d => ({id: d.id, ...d.data()}));
                
                renderExpenseStats(currentExpenses); 
                renderExpenseList(currentExpenses); 
            });
        }

        // æ¸²æŸ“ç»Ÿè®¡ (åŒ…å«æœˆã€å¹´ã€æ€»)
        function renderExpenseStats(expenses) {
            const now = new Date();
            const currentYear = now.getFullYear();
            const currentMonth = String(now.getMonth() + 1).padStart(2, '0');
            const currentMonthKey = `${currentYear}-${currentMonth}`;

            document.getElementById('currentMonthYear').textContent = currentMonthKey;
            document.getElementById('currentYear').textContent = currentYear;

            const stats = { 
                monthly: { 'æˆ‘': 0, 'åª³å¦‡': 0, 'ä¸ƒå–œ': 0, 'Total': 0 },
                yearly: { 'æˆ‘': 0, 'åª³å¦‡': 0, 'ä¸ƒå–œ': 0, 'Total': 0 },
                total: { 'æˆ‘': 0, 'åª³å¦‡': 0, 'ä¸ƒå–œ': 0, 'Total': 0 }
            };
            
            expenses.forEach(e => {
                // ç¡®ä¿ amount æ˜¯æ•°å­—
                const amount = Number(e.amount) || 0;
                
                // å†å²æ€»è®¡
                stats.total[e.payer] += amount;
                stats.total['Total'] += amount;

                // æœ¬å¹´æ€»è®¡
                if (e.date.startsWith(String(currentYear))) {
                    stats.yearly[e.payer] += amount;
                    stats.yearly['Total'] += amount;
                }

                // æœ¬æœˆæ€»è®¡
                if (e.date.startsWith(currentMonthKey)) {
                    stats.monthly[e.payer] += amount;
                    stats.monthly['Total'] += amount;
                }
            });

            // è¾…åŠ©æ¸²æŸ“å‡½æ•°
            const renderStatBlock = (data, elementId) => {
                const colors = { 'æˆ‘': '#4f46e5', 'åª³å¦‡': '#f97316', 'ä¸ƒå–œ': '#0d9488' };
                const summaryHtml = `
                    <div class="expense-stat-card">
                        <div class="expense-stat-val" style="color:${colors['æˆ‘']};">Â¥${data['æˆ‘'].toFixed(2)}</div>
                        <div class="expense-stat-label">æˆ‘</div>
                    </div>
                    <div class="expense-stat-card">
                        <div class="expense-stat-val" style="color:${colors['åª³å¦‡']};">Â¥${data['åª³å¦‡'].toFixed(2)}</div>
                        <div class="expense-stat-label">åª³å¦‡</div>
                    </div>
                    <div class="expense-stat-card">
                        <div class="expense-stat-val" style="color:${colors['ä¸ƒå–œ']};">Â¥${data['ä¸ƒå–œ'].toFixed(2)}</div>
                        <div class="expense-stat-label">ä¸ƒå–œ</div>
                    </div>
                    <div class="expense-total-summary">
                        æ€»è®¡ï¼š<span style="font-size:1.3rem;">Â¥${data['Total'].toFixed(2)}</span>
                    </div>
                `;
                document.getElementById(elementId).innerHTML = summaryHtml;
            };

            renderStatBlock(stats.monthly, 'monthlyStatsSummary');
            renderStatBlock(stats.yearly, 'yearlyStatsSummary');
            renderStatBlock(stats.total, 'totalStatsSummary');
        }

        // æ¸²æŸ“åˆ—è¡¨
        function renderExpenseList(expenses) {
            const listEl = document.getElementById('expenseList');
            const colorMap = { 'æˆ‘': {bg: '#dbeafe', text: '#1d4ed8', border: '#93c5fd'}, 'åª³å¦‡': {bg: '#fff7ed', text: '#f97316', border: '#fed7aa'}, 'ä¸ƒå–œ': {bg: '#ccfbf1', text: '#0d9488', border: '#5eead4'} };
            
            listEl.innerHTML = expenses.map(e => {
                const color = colorMap[e.payer] || {bg: '#f3e8ff', text: '#a855f7', border: '#d8b4fe'};
                return `
                    <div class="task-item" style="border-left: 5px solid ${color.text}; justify-content: space-between;">
                        <div style="flex: 1; min-width: 0;">
                            <div class="task-title" style="font-weight: 700;">Â¥${Number(e.amount).toFixed(2)}</div>
                            <div style="font-size:0.75rem; color:#64748b; margin-top: 3px;">${e.description || 'æ— æè¿°'}</div>
                        </div>
                        <div style="text-align: right; margin-left: 10px; flex-shrink: 0;">
                            <div class="task-cal-tag" style="background:${color.bg}; color:${color.text}; border:1px solid ${color.border};">${e.payer}</div>
                            <div style="font-size:0.7rem; color:#94a3b8; margin-top: 3px;">${e.date}</div>
                        </div>
                        <button style="border:none;background:none;cursor:pointer;color:#ef4444; margin-left: 8px;" onclick="deleteExpense('${e.id}')">ğŸ—‘ï¸</button>
                    </div>
                `;
            }).join('') || '<p style="text-align:center;color:#ccc;font-size:0.8rem;">æš‚æ— è´¦ç›®è®°å½•ã€‚</p>';
        }


