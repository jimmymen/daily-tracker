        let currentTasks = [];
        let chatsCache = [];
        let quotesCache = [];
        let currentExpenses = []; // æ–°å¢è®°è´¦æ•°æ®ç¼“å­˜
        window.currentBonusCal = 0; 

        // --- è®°è´¦è§†å›¾ä¸å…¥å£é€»è¾‘ (æ–°å¢/ä¿®æ”¹) ---
        
        // è§†å›¾åˆ‡æ¢
        window.openExpenseView = () => {
            // å…¼å®¹ç§»åŠ¨ç«¯å’Œæ¡Œé¢ç«¯
            document.querySelector('.main-layout').style.display = 'none'; 
            document.getElementById('expenseTrackerView').style.display = 'flex';
            document.getElementById('app').style.display = 'none'; // éšè—æ•´ä¸ªè¿åŠ¨ä¸»é¡µ
            
