        async function loadKey() {
            if (!currentUser) return; 
            const d = await getDoc(doc(db, `users/${currentUser.uid}/settings`, "deepseek"));
            if (d.exists()) document.getElementById('apiKey').value = d.data().apiKey;
        }

        window.saveKeyToFirebase = async () => {
            if (!currentUser) { alert("è¯·å…ˆç™»å½•ï¼"); return; }
            const key = document.getElementById('apiKey').value.trim();
            if (!key) return;
            await setDoc(doc(db, `users/${currentUser.uid}/settings`, "deepseek"), { apiKey: key, updatedAt: serverTimestamp() });
            alert("âœ¨ äº‘ç«¯åŒæ­¥æˆåŠŸï¼");
        };

        // æ‘˜æŠ„ç›¸å…³
        async function syncQuotes() {
            if (!currentUser) return; 
            const qSnap = await getDocs(query(collection(db, `users/${currentUser.uid}/quotes`), orderBy("timestamp", "desc")));
            quotesCache = qSnap.docs.map(d => ({id: d.id, ...d.data()}));
            displayQuoteByDay();
        }
        function displayQuoteByDay() {
            if (quotesCache.length === 0) { document.getElementById('quoteText').textContent = "ä¹¦æ¶è¿˜æ²¡ä¹¦å“¦"; document.getElementById('quoteBook').textContent = "â€”â€” è¯•è¯•å½•å…¥ä¹¦æ‘˜å§"; return; }
            const q = quotesCache[parseInt(selectedDate.replace(/-/g, '')) % quotesCache.length];
            document.getElementById('quoteText').textContent = `â€œ${q.text}â€`;
            document.getElementById('quoteBook').textContent = `â€”â€” ${q.source || 'æœªçŸ¥'}`;
        }
        function refreshQuote() { if (quotesCache.length === 0) return; const q = quotesCache[Math.floor(Math.random() * quotesCache.length)]; document.getElementById('quoteText').textContent = `â€œ${q.text}â€`; document.getElementById('quoteBook').textContent = `â€”â€” ${q.source || 'æœªçŸ¥'}`; }
        function openAddQuoteModal() { document.getElementById('editingQuoteId').value = ""; document.getElementById('quoteInput').value = ""; document.getElementById('quoteSource').value = ""; document.getElementById('addQuoteModal').style.display = 'flex'; }
        function closeAddQuoteModal() { document.getElementById('addQuoteModal').style.display = 'none'; }
        async function saveQuoteManual() {
            if (!currentUser) return;
            const text = document.getElementById('quoteInput').value.trim(); const source = document.getElementById('quoteSource').value.trim(); const qId = document.getElementById('editingQuoteId').value;
            if (!text) return;
            if (qId) await updateDoc(doc(db, `users/${currentUser.uid}/quotes`, qId), { text, source });
            else await addDoc(collection(db, `users/${currentUser.uid}/quotes`), { text, source, timestamp: serverTimestamp() });
            await syncQuotes(); closeAddQuoteModal();
        }
        function openManageQuotesModal() { renderManageQuotes(); document.getElementById('manageQuotesModal').style.display = 'flex'; }
        function closeManageQuotesModal() { document.getElementById('manageQuotesModal').style.display = 'none'; }
        function renderManageQuotes() {
            const listEl = document.getElementById('quotesManageList');
            listEl.innerHTML = quotesCache.map(q => `<div style="background:#f8fafc;padding:10px;border-radius:10px;margin-bottom:8px;font-size:0.85rem;"><div>${q.text}</div><div style="display:flex;justify-content:space-between;margin-top:5px;"><span>ğŸ“– ${q.source || ''}</span><div><button class="small-btn" onclick="editQuote('${q.id}')">ç¼–è¾‘</button><button class="small-btn" onclick="deleteQuote('${q.id}')">åˆ é™¤</button></div></div></div>`).join('');
        }
        function editQuote(id) {
            const q = quotesCache.find(x => x.id === id);
            document.getElementById('editingQuoteId').value = q.id; document.getElementById('quoteInput').value = q.text; document.getElementById('quoteSource').value = q.source || "";
            document.getElementById('manageQuotesModal').style.display = 'none'; document.getElementById('addQuoteModal').style.display = 'flex';
        }
        async function deleteQuote(id) { if (confirm("ä»ä¹¦æ¶ç§»é™¤ï¼Ÿ")) { await deleteDoc(doc(db, `users/${currentUser.uid}/quotes`, id)); await syncQuotes(); renderManageQuotes(); } }

        // æ—¥æœŸå¯¼èˆª
        function changeDate(os) {
            const d = new Date(selectedDate); d.setDate(d.getDate() + os);
            selectedDate = `${d.getFullYear()}-${String(d.getMonth()+1).padStart(2,'0')}-${String(d.getDate()).padStart(2,'0')}`;
            initView(selectedDate);
        }
        function jumpToDate(d) { if(d) { selectedDate = d; initView(d); } }

        // ä»»åŠ¡ç®¡ç†
        function openAddTaskModal() { document.getElementById('addTaskModal').style.display = 'flex'; }
        function closeAddTaskModal() { document.getElementById('addTaskModal').style.display = 'none'; }
        async function saveTaskManual() {
            if (!currentUser) return;
            const title = document.getElementById('manualTaskInput').value.trim();
            const cal = document.getElementById('manualCalInput').value.trim() || 0;
            if (title) {
                await addDoc(collection(db, `users/${currentUser.uid}/tasks`), { 
                    title, 
                    calories: Number(cal), 
                    date: selectedDate, 
                    isDone: false, 
                    order: Date.now() 
                });
                closeAddTaskModal(); document.getElementById('manualTaskInput').value = ""; document.getElementById('manualCalInput').value = "";
            }
        }
        async function deleteTask(id) { if(confirm("åˆ é™¤æ­¤é¡¹ç›®ï¼Ÿ")) await deleteDoc(doc(db, `users/${currentUser.uid}/tasks`, id)); }
        async function clearChats() { 
            if(!currentUser || !confirm("æ¸…ç©ºä»Šæ—¥å¯¹è¯ï¼Ÿ")) return;
            const batch = writeBatch(db);
            const q = await getDocs(query(collection(db, `users/${currentUser.uid}/chats`), where("date", "==", selectedDate)));
            q.forEach(d => batch.delete(d.ref));
            await batch.commit();
        }
        async function toggleTask(id, s, title) {
            if (!currentUser || isProcessing) return;
            const newStatus = !s;
            await updateDoc(doc(db, `users/${currentUser.uid}/tasks`, id), { isDone: newStatus });
            if (newStatus) {
                await addDoc(collection(db, `users/${currentUser.uid}/chats`), { role: 'user', text: `æ‰“å¡å®Œæˆï¼š${title}ï¼ğŸ’ª`, date: selectedDate, timestamp: serverTimestamp() });
                triggerTaskCoach(title);
            }
        }
        async function forceInheritTasks() {
            if (!currentUser) return;
            const tCol = collection(db, `users/${currentUser.uid}/tasks`);
            // 1. æŸ¥æ‰¾ä¸Šä¸€ä¸ªæœ‰ä»»åŠ¡çš„æ—¥æœŸ
            const snapPast = await getDocs(query(tCol, where("date", "<", selectedDate), orderBy("date", "desc"), limit(1)));
            if (snapPast.empty) { alert("æœªæ‰¾åˆ°å‰åºä»»åŠ¡è®°å½•ã€‚"); return; }
            
            const sourceDate = snapPast.docs[0].data().date;
            // 2. è·å–è¯¥æ—¥æœŸçš„æ‰€æœ‰ä»»åŠ¡ (åŒ…æ‹¬å·²å®Œæˆçš„)
            const snapTasks = await getDocs(query(tCol, where("date", "==", sourceDate)));
            
            // 3. åˆ é™¤å½“å‰æ—¥æœŸçš„æ‰€æœ‰ä»»åŠ¡
            const snapCurrent = await getDocs(query(tCol, where("date", "==", selectedDate)));
            const deleteBatch = writeBatch(db);
            snapCurrent.docs.forEach(d => deleteBatch.delete(d.ref));
            await deleteBatch.commit();

            // 4. é‡æ–°æ·»åŠ ä»»åŠ¡åˆ°å½“å‰æ—¥æœŸ (å…¨éƒ¨è®¾ä¸ºæœªå®Œæˆ)
            const addBatch = writeBatch(db);
            snapTasks.docs.forEach(t => {
                const newTaskRef = doc(tCol);
                addBatch.set(newTaskRef, { 
                    title: t.data().title, 
                    calories: t.data().calories || 0,
                    date: selectedDate, 
                    isDone: false, // å¼ºåˆ¶è®¾ä¸ºæœªå®Œæˆ
                    order: t.data().order || Date.now() 
                });
            });
            await addBatch.commit();
            alert(`å·²ä» ${sourceDate} åŒæ­¥ä»»åŠ¡ï¼Œå¹¶è®¾ä¸ºå¾…åŠã€‚`);
        }
        
        // ã€è·å–å‰ä¸€å¤©è®­ç»ƒæ•°æ®ã€‘
        async function getPreviousDayData() {
            if (!currentUser) return null;

            const prevD = new Date(selectedDate);
            prevD.setDate(prevD.getDate() - 1);
            const prevDate = `${prevD.getFullYear()}-${String(prevD.getMonth()+1).padStart(2,'0')}-${String(prevD.getDate()).padStart(2,'0')}`;
            
            // è·å–æ˜¨å¤©çš„å·²å®Œæˆä»»åŠ¡
            const qTasks = query(collection(db, `users/${currentUser.uid}/tasks`), where("date", "==", prevDate), where("isDone", "==", true));
            const tasksSnap = await getDocs(qTasks);
            const completedTasks = tasksSnap.docs.map(d => ({ title: d.data().title, calories: d.data().calories || 0 }));

            // è·å–æ˜¨å¤©çš„é¢å¤–å¡è·¯é‡Œï¼ˆä¸´æ—¶è¿åŠ¨ï¼‰
            const statsSnap = await getDoc(doc(db, `users/${currentUser.uid}/dailyStats`, prevDate));
            const bonusCalories = statsSnap.exists() ? (statsSnap.data().bonusCalories || 0) : 0;
            
            // è·å–æ˜¨å¤©çš„èŠå¤©è®°å½• (ç”¨äºæå–ç”¨æˆ·åœ¨èŠå¤©ä¸­æåˆ°çš„é¢å¤–è¿åŠ¨)
            const qChats = query(collection(db, `users/${currentUser.uid}/chats`), where("date", "==", prevDate), where("role", "==", "user"), orderBy("timestamp", "asc"));
            const chatsSnap = await getDocs(qChats);
            const userChats = chatsSnap.docs.map(d => d.data().text);

            return { prevDate, completedTasks, bonusCalories, userChats };
        }
        
        // ã€è§¦å‘æ—¥å¸¸æ€»ç»“ã€‘
        async function triggerDailySummary(previousData) {
            const key = document.getElementById('apiKey').value.trim();
            if (!key || !previousData || previousData.completedTasks.length === 0) return; // æ˜¨å¤©æ²¡æœ‰å®Œæˆä»»åŠ¡ï¼Œåˆ™ä¸æ€»ç»“

            const taskList = previousData.completedTasks.map(t => `${t.title} (æ¸…å•å¡è·¯é‡Œ: ${t.calories} kcal)`).join('; ');
            const summaryPrompt = `ç”¨æˆ·æ˜¨å¤©(${previousData.prevDate})å®Œæˆäº†ä»¥ä¸‹è®­ç»ƒä»»åŠ¡: [${taskList}]ã€‚æ­¤å¤–ï¼Œé€šè¿‡è‡ªç”±èŠå¤©æåˆ°äº†å…¶ä»–è¿åŠ¨å¹¶ä¼°ç®—æ¶ˆè€—äº† ${previousData.bonusCalories} é¢å¤–å¡è·¯é‡Œã€‚è¯·ä½ æ‰®æ¼”ç§äººæ•™ç»ƒï¼Œæ ¹æ®è¿™äº›ä¿¡æ¯ï¼Œç»™å‡ºä¸€ä¸ªç®€çŸ­çš„æ€»ç»“ã€é’ˆå¯¹æ€§å»ºè®®å’Œé¼“åŠ±ã€‚é‡ç‚¹æåŠç”¨æˆ·åœ¨æ¸…å•å¤–çš„åŠªåŠ›ï¼ˆå¦‚æœæœ‰é¢å¤–å¡è·¯é‡Œï¼‰ã€‚å›å¤ä¸è¶…è¿‡120å­—ã€‚`;

            try {
                 const res = await fetch("https://api.deepseek.com/chat/completions", {
                    method: "POST",
                    headers: { "Content-Type": "application/json", "Authorization": `Bearer ${key}` },
                    body: JSON.stringify({
                        model: "deepseek-chat",
                        messages: [
                            { role: "system", content: "ä½ æ˜¯ä¸€ä¸ªé˜³å…‰å¹½é»˜ã€è®°æ€§æå¥½çš„ç§äººæ•™ç»ƒï¼Œä»»åŠ¡æ˜¯æ€»ç»“ç”¨æˆ·çš„æ˜¨æ—¥è®­ç»ƒï¼Œç»™å‡ºé¼“åŠ±å’Œä¸€æ¡ä¸“ä¸šå»ºè®®ã€‚å›å¤ä¸è¶…è¿‡120å­—ã€‚" },
                            { role: "user", content: summaryPrompt }
                        ]
                    })
                });

                const text = (await res.json()).choices[0].message.content;
                await addDoc(collection(db, `users/${currentUser.uid}/chats`), { 
                    role: 'coach', 
                    text: `ğŸ’ª æ˜¨å¤©å›é¡¾ï¼š${text}`, 
                    date: selectedDate, 
                    timestamp: serverTimestamp() 
                });
            } catch (e) {
                // é™é»˜å¤±è´¥
            }
        }

        // AI æ ¸å¿ƒé€»è¾‘
        async function processAI() {
            const input = document.getElementById('aiInput').value.trim();
            const key = document.getElementById('apiKey').value.trim();
            const aiBtn = document.getElementById('aiBtn');

            if (!input || !key || isProcessing || !currentUser) return;
            
            isProcessing = true; 
            aiBtn.disabled = true;
            aiBtn.textContent = "å‘é€ä¸­..."; 
            
            // ã€æ£€æŸ¥æ˜¯å¦æ˜¯å½“æ—¥éæ‰“å¡ç¬¬ä¸€æ¡æ¶ˆæ¯ã€‘
            const isFirstChatToday = !chatsCache.some(c => c.role === 'user' && !c.text.startsWith('æ‰“å¡å®Œæˆ'));
            
            try {
                // 1. è®°å½•ç”¨æˆ·è¾“å…¥
                await addDoc(collection(db, `users/${currentUser.uid}/chats`), { role: 'user', text: input, date: selectedDate, timestamp: serverTimestamp() });
                document.getElementById('aiInput').value = "";

                // ã€è§¦å‘æ˜¨æ—¥æ€»ç»“ã€‘
                if (isFirstChatToday) {
                    const previousData = await getPreviousDayData();
                    triggerDailySummary(previousData);
                }

                // 2. å‡†å¤‡å†å²å¯¹è¯
                const history = chatsCache.slice(-50).map(c => ({ role: c.role === 'coach' ? 'assistant' : 'user', content: c.text }));

                // 3. è°ƒç”¨ DeepSeek API
                const res = await fetch("https://api.deepseek.com/chat/completions", {
                    method: "POST",
                    headers: { "Content-Type": "application/json", "Authorization": `Bearer ${key}` },
                    body: JSON.stringify({
                        model: "deepseek-chat",
                        messages: [
                            { role: "system", content: "ä½ æ˜¯ä¸€ä¸ªé˜³å…‰å¹½é»˜ã€è®°æ€§æå¥½çš„ç§äººæ•™ç»ƒã€‚ä½ ä¼šå‚è€ƒå¯¹è¯å†å²æ¥ç»™äºˆè´´å¿ƒåé¦ˆã€‚å¦‚æœç”¨æˆ·æåˆ°åšäº†æ¸…å•å¤–çš„è¿åŠ¨ï¼Œè¯·å¤¸å¥–å¹¶ä¼°ç®—å¡è·¯é‡Œã€‚JSONæ ¼å¼å›å¤ï¼š{ 'coach_reply': '...', 'bonus_calories': 300 }ã€‚bonus_caloriesåªåœ¨ä¼°ç®—å¡è·¯é‡Œæ—¶æä¾›ï¼Œå¦åˆ™ä¸º0ã€‚" },
                            ...history,
                            { role: "user", content: input }
                        ],
                        response_format: { type: "json_object" }
                    })
                });

                const result = await res.json();
                
                if (result.error) {
                    throw new Error(result.error.message || 'DeepSeek API è¿”å›é”™è¯¯');
                }
                
                const aiResponse = JSON.parse(result.choices[0].message.content);
                
                // 4. è®°å½•æ•™ç»ƒå›å¤
                await addDoc(collection(db, `users/${currentUser.uid}/chats`), { role: 'coach', text: aiResponse.coach_reply, date: selectedDate, timestamp: serverTimestamp() });
                
                // 5. è®°å½•é¢å¤–å¡è·¯é‡Œ
                if (aiResponse.bonus_calories > 0) {
                    await setDoc(doc(db, `users/${currentUser.uid}/dailyStats`, selectedDate), { bonusCalories: increment(aiResponse.bonus_calories) }, { merge: true });
                }
            } catch (e) {
                console.error("AIå¤„ç†é”™è¯¯:", e);
                const errorMessage = `å¯¹ä¸èµ·ï¼ŒAI æ•™ç»ƒä»Šå¤©æœ‰ç‚¹ç´¯äº†ï¼ˆå¯èƒ½æ˜¯ Key é”™è¯¯ã€ç½‘ç»œè¿æ¥é—®é¢˜æˆ–DeepSeeké¢‘ç‡é™åˆ¶ï¼‰ã€‚è¯·æ£€æŸ¥æ§åˆ¶å°è·å–æ›´å¤šé”™è¯¯ä¿¡æ¯ã€‚`;
                
                await addDoc(collection(db, `users/${currentUser.uid}/chats`), { role: 'coach', text: errorMessage, date: selectedDate, timestamp: serverTimestamp() });
                
                if (!key) {
                     alert("DeepSeek Key ä¸ºç©ºï¼Œè¯·æ£€æŸ¥ Key æ˜¯å¦å·²ç²˜è´´æˆ–äº‘ç«¯ Key æ˜¯å¦å·²æˆåŠŸåŠ è½½ã€‚");
                }
                
            } finally {
                isProcessing = false;
                aiBtn.disabled = false;
                aiBtn.textContent = "å‘é€";
            }
        }
        
        async function triggerTaskCoach(title) {
            if (!currentUser) return;
            const key = document.getElementById('apiKey').value.trim(); 
            if (!key) return;
            
            const shortHistory = chatsCache.slice(-5).map(c => ({ role: c.role === 'coach' ? 'assistant' : 'user', content: c.text }));
            try {
                const res = await fetch("https://api.deepseek.com/chat/completions", {
                    method: "POST",
                    headers: { "Content-Type": "application/json", "Authorization": `Bearer ${key}` },
                    body: JSON.stringify({
                        model: "deepseek-chat",
                        messages: [
                            { role: "system", content: "ä½ æ˜¯ä¸€ä¸ªä¸“ä¸šçš„ç§äººæ•™ç»ƒã€‚ç”¨æˆ·åˆšå®Œæˆä¸€ä¸ªä»»åŠ¡ï¼Œè¯·ç»™å‡ºä¸€æ¡å…³äºè¯¥åŠ¨ä½œçš„**ä¸“ä¸šå»ºè®®ã€æ³¨æ„äº‹é¡¹æˆ–ç»†èŠ‚**ï¼Œå¸®åŠ©ç”¨æˆ·åšå¾—æ›´æ ‡å‡†ã€é¿å…å—ä¼¤ã€‚å›å¤ä¸è¶…è¿‡ 80 å­—ã€‚" },
                            ...shortHistory,
                            { role: "user", content: `é’ˆå¯¹æˆ‘çš„ä»»åŠ¡ï¼š${title}ï¼Œç»™æˆ‘ä¸“ä¸šåé¦ˆã€‚` }
                        ]
                    })
                });
                const text = (await res.json()).choices[0].message.content;
                await addDoc(collection(db, `users/${currentUser.uid}/chats`), { role: 'coach', text: text, date: selectedDate, timestamp: serverTimestamp() });
            } catch (e) {
                // é™é»˜å¤±è´¥
            }
        }

        async function triggerGreeting() {
            if (!currentUser) return;
            const key = document.getElementById('apiKey').value.trim(); 
            if (!key) return;
            try {
                const res = await fetch("https://api.deepseek.com/chat/completions", {
                    method: "POST",
                    headers: { "Content-Type": "application/json", "Authorization": `Bearer ${key}` },
                    body: JSON.stringify({
                        model: "deepseek-chat",
                        messages: [{ role: "system", content: "æ¸…æ™¨é—®å€™ã€‚é˜³å…‰åŠ±å¿—ï¼Œå¸¦ä¸€å¥åè¨€ã€‚40å­—å†…ã€‚" }]
                    })
                });
                const text = (await res.json()).choices[0].message.content;
                await addDoc(collection(db, `users/${currentUser.uid}/chats`), { role: 'coach', text: text, date: selectedDate, timestamp: serverTimestamp() });
            } catch (e) {
                 // é™é»˜å¤±è´¥
            }
        }
        
        // å®æ—¶æ•°æ®ç›‘å¬å‡½æ•°
        function initView(date) {
            if (!currentUser) return;
            document.getElementById('dateDisplay').textContent = date;
            
            // åœæ­¢ä¹‹å‰çš„ç›‘å¬
            if (unsubT) unsubT();
            if (unsubC) unsubC();
            if (unsubS) unsubS();
            window.currentBonusCal = 0; 

            // ä»»åŠ¡åˆ—è¡¨ç›‘å¬
            unsubT = onSnapshot(query(collection(db, `users/${currentUser.uid}/tasks`), where("date", "==", date), orderBy("order", "asc")), (snapshot) => {
                currentTasks = snapshot.docs.map(d => ({id: d.id, ...d.data()}));
                renderTasks();
                // æ¯æ¬¡ä»»åŠ¡æ›´æ–°æ—¶ï¼Œé‡æ–°è®¡ç®—ä»»åŠ¡å¡è·¯é‡Œå¹¶æ›´æ–°æ€»å¡è·¯é‡Œæ˜¾ç¤º
                const totalTaskCal = currentTasks.filter(t => t.isDone).reduce((sum, t) => sum + (t.calories || 0), 0);
                document.getElementById('totalCalories').textContent = totalTaskCal + (window.currentBonusCal || 0);
            });

            // èŠå¤©è®°å½•ç›‘å¬
            unsubC = onSnapshot(query(collection(db, `users/${currentUser.uid}/chats`), where("date", "==", date), orderBy("timestamp", "asc")), (snapshot) => {
                chatsCache = snapshot.docs.map(d => ({id: d.id, ...d.data()}));
                renderChats(chatsCache);
            });
            
            // æ¯æ—¥ç»Ÿè®¡å’Œé¢å¤–å¡è·¯é‡Œç›‘å¬
            unsubS = onSnapshot(doc(db, `users/${currentUser.uid}/dailyStats`, date), (docSnap) => {
                const bonusCal = docSnap.exists() ? (docSnap.data().bonusCalories || 0) : 0;
                window.currentBonusCal = bonusCal; // æ›´æ–°å…¨å±€å˜é‡
                // é‡æ–°è®¡ç®—æ€»å¡è·¯é‡Œ
                const totalTaskCal = currentTasks.filter(t => t.isDone).reduce((sum, t) => sum + (t.calories || 0), 0);
                document.getElementById('totalCalories').textContent = totalTaskCal + bonusCal;
            });

            syncQuotes(); // åŠ è½½å¹¶æ˜¾ç¤ºä¹¦æ‘˜
            loadKey();    // åŠ è½½äº‘ç«¯ API Key
        }

        // è§†å›¾æ¸²æŸ“ä¸çŠ¶æ€è®¡ç®—
        function renderTasks() {
            const todoList = document.getElementById('todoList');
            const doneList = document.getElementById('doneList');
            let todoHtml = '';
            let doneHtml = '';

            // æ’åº: æœªå®Œæˆåœ¨å‰ï¼Œå·²å®Œæˆåœ¨å
            const sortedTasks = [...currentTasks].sort((a, b) => a.order - b.order); 

            sortedTasks.forEach(t => {
                const itemHtml = `
                    <div class="task-item ${t.isDone ? 'done' : ''}">
                        <div class="checkbox" onclick="toggleTask('${t.id}', ${t.isDone}, '${t.title.replace(/'/g, "\\'")}')"></div>
                        <div class="task-title">${t.title}</div>
                        ${t.calories > 0 ? `<div class="task-cal-tag">${t.calories} kcal</div>` : ''}
                        <button style="border:none;background:none;cursor:pointer;color:#ef4444" onclick="deleteTask('${t.id}')">ğŸ—‘ï¸</button>
                    </div>
                `;
                if (t.isDone) {
                    doneHtml += itemHtml;
                } else {
                    todoHtml += itemHtml;
                }
            });
            
            todoList.innerHTML = todoHtml || '<p style="text-align:center;color:#ccc;font-size:0.8rem;">ä»Šæ—¥æ— å¾…åŠä»»åŠ¡ï¼Œå¿«å»å¢åŠ å§ï¼</p>';
            doneList.innerHTML = doneHtml || '<p style="text-align:center;color:#ccc;font-size:0.8rem;">æš‚æ— å·²å®Œæˆé¡¹ç›®ã€‚</p>';
        }

        function renderChats(chats) {
            const el = document.getElementById('chatBox');
            el.innerHTML = chats.map(c => `<div class="msg msg-${c.role}">${c.text}</div>`).join('');
            el.scrollTop = el.scrollHeight;
        }

        // è®¤è¯çŠ¶æ€ç›‘å¬
        onAuthStateChanged(auth, (user) => {
            if (user) {
                // ç”¨æˆ·å·²ç™»å½•
                currentUser = user;
                document.getElementById('userName').textContent = `ä½ å¥½ï¼Œ${user.displayName || user.email}`;
                document.getElementById('loginScreen').style.display = 'none';
                document.getElementById('app').style.display = 'flex';
                
                // 1. åˆå§‹åŒ–è§†å›¾ï¼šåŠ è½½å½“å‰æ—¥æœŸçš„æ•°æ®
                initView(selectedDate);
                
                // 2. æ£€æŸ¥å¹¶è§¦å‘é—®å€™ (ç¡®ä¿åªåœ¨å½“å¤©ç¬¬ä¸€æ¬¡åŠ è½½æ—¶è§¦å‘)
                setTimeout(async () => {
                    // æ£€æŸ¥å½“æ—¥æ˜¯å¦æœ‰ä»»ä½•èŠå¤©è®°å½•
                    const qSnap = await getDocs(query(collection(db, `users/${currentUser.uid}/chats`), where("date", "==", selectedDate), limit(1)));
                    if (qSnap.empty) {
                        triggerGreeting();
                    }
                }, 1000); 
                
                // 3. ç»‘å®šä¸‰è¿å‡»å…¥å£äº‹ä»¶
                document.getElementById('appHeader').addEventListener('click', handleTripleClick);

            } else {
                // ç”¨æˆ·æœªç™»å½•æˆ–å·²ç™»å‡º
                currentUser = null;
                document.getElementById('userName').textContent = `ä½ å¥½`;
                document.getElementById('loginScreen').style.display = 'flex';
                document.getElementById('app').style.display = 'none';

                // åœæ­¢å®æ—¶ç›‘å¬
                if (unsubT) unsubT();
                if (unsubC) unsubC();
                if (unsubS) unsubS();
                if (unsubE) unsubE(); // åœæ­¢è®°è´¦ç›‘å¬

                // è§£ç»‘ä¸‰è¿å‡»å…¥å£äº‹ä»¶ï¼ˆå¯é€‰ï¼Œä½†æ¨èï¼‰
                const headerEl = document.getElementById('appHeader');
                if (headerEl) headerEl.removeEventListener('click', handleTripleClick);
            }
        });


        // --- ç»Ÿä¸€æŒ‚è½½åˆ° window å¯¹è±¡ï¼ˆè§£å†³ is not defined é”™è¯¯ï¼‰ ---
        window.login = login;
        window.logout = logout;
        window.refreshQuote = refreshQuote;
        window.openAddQuoteModal = openAddQuoteModal;
        window.closeAddQuoteModal = closeAddQuoteModal;
        window.saveQuoteManual = saveQuoteManual;
        window.openManageQuotesModal = openManageQuotesModal;
        window.closeManageQuotesModal = closeManageQuotesModal;
        window.editQuote = editQuote;
        window.deleteQuote = deleteQuote;

        window.changeDate = changeDate;
        window.jumpToDate = jumpToDate;

        window.openAddTaskModal = openAddTaskModal;
        window.closeAddTaskModal = closeAddTaskModal;
        window.saveTaskManual = saveTaskManual;
        window.deleteTask = deleteTask;
        window.clearChats = clearChats;
        window.toggleTask = toggleTask; 
        window.forceInheritTasks = forceInheritTasks;
        window.initView = initView; 
        window.processAI = processAI;
        
        // è®°è´¦ç›¸å…³å‡½æ•°æŒ‚è½½
        window.openExpenseView = openExpenseView;
        window.closeExpenseView = closeExpenseView;
        window.openAddExpenseModal = openAddExpenseModal;
        window.closeAddExpenseModal = closeAddExpenseModal;
        window.saveExpenseManual = saveExpenseManual;
        window.deleteExpense = deleteExpense;
        
    </script>
